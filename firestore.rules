rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // SIRAT - Production Firestore Security Rules
    // ============================================
    
    // Helper: Check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }
    
    // Helper: Check if user owns the resource
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    // ============================================
    // USER DATA (Private)
    // ============================================
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // AI Chat History - Session based
      match /ai_chats/{sessionId} {
        allow read, write: if isOwner(userId);
        
        match /messages/{messageId} {
          allow read, write: if isOwner(userId);
        }
      }
      
      // Zikirmatik Data
      match /zikirmatik/{documentId} {
        allow read, write: if isOwner(userId);
      }
      
      // Prayer Tracking
      match /prayers/{documentId} {
        allow read, write: if isOwner(userId);
      }
      
      // Bookmarks
      match /bookmarks/{documentId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Legacy zikir_counts (backward compatibility)
    match /zikir_counts/{zikirId} {
      allow read, write: if isAuth();
    }
    
    // ============================================
    // PUBLIC CONTENT (Read-only)
    // ============================================
    
    match /settings/global {
      allow read: if true;
      allow write: if false;
    }
    
    match /daily_content/{documentId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /quran/{suraId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /duas/{documentId} {
      allow read: if true;
      allow write: if false;
    }
    
    // ============================================
    // FEEDBACK (Write-only)
    // ============================================
    match /feedback/{documentId} {
      allow create: if isAuth();
      allow read, update, delete: if false;
    }
  }
}
